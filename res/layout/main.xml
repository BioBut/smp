<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:id="@+id/lytMainSpace"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select files"
                android:id="@+id/lblTitle" android:textSize="50sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:maxHeight="300dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/lblArtist" android:textSize="30sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:maxHeight="75dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/lblAlbum" android:textSize="30sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:maxHeight="75dp"/>
        </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/barTime" android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:indeterminate="false"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/lblTime"
                android:gravity="center_horizontal" android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:gravity="center_horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:id="@+id/btnPrev" android:onClick="onPrevCick"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:id="@+id/btnPlayPause" android:layout_gravity="bottom" android:onClick="onBtnPlayPause"
                android:layout_alignParentBottom="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/btnNext" android:onClick="onNextClick"
                android:background="#1decff" android:textColor="@android:color/black"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </LinearLayout>
</LinearLayout>

